.tpl-table {
  border: 0px solid darkgray;
}

.tpl-tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.tpl-td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.tpl-bg-w {
  background: snow;
}

.tpl-bg-g {
  background: #e6f3f9;
}

.tpl-th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}